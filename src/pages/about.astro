  }

  #about-grafik {
    margin-top: var(--l-spacing);
    margin-inline: auto;
  }
  @media (min-width: 690px) {
    .contact {
      display: flex;
      justify-content: space-between;
    }

    .personal-contact,
    .contact-right-item {
      margin-bottom: var(--s-spacing);
    }

    #about-text {
      margin-inline: auto;
    }
  }
</style>
