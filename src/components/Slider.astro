---
import "../style.css";
---

<div class="landing-page-container">
  <h4>Shop by Category</h4>
</div>
<div class="slider_container">
  <div class="slider">
    <a class="slider-item">
      <img src="../img/tilachair.webp" alt="Tila chair" />
      <p>Seating</p>
    </a>
    <a class="slider-item">
      <img src="../img/vase.webp" alt="Upsala vase" />
      <p>Vases</p>
    </a>
    <a class="slider-item">
      <img src="../img/palamata.webp" alt="Palmata" />
      <p>Shelving</p>
    </a>
    <a class="slider-item">
      <img src="../img/impalatable.webp" alt="Impala table" />
      <p>Table</p>
    </a>
    <a class="slider-item">
      <img src="../img/balzerlampe.webp" alt="Balzer Balzer lampe" />
      <p>Lighting</p>
    </a>
    <a class="slider-item">
      <img src="../img/zincplate.webp" alt="Zinc plate" />
      <p>Decoration</p>
    </a>
    <a class="slider-item">
      <img src="../img/skaal.webp" alt="SkÃ¥l" />
      <p>Tableware</p>
    </a>
  </div>
</div>
<hr id="hr_landing" />

<style>
  .landing-page-container {
    width: 95%;
    margin-inline: auto;
  }
  a {
    border-bottom: none;
    cursor: pointer;
  }
  img {
    min-width: 100%;
    aspect-ratio: 1/1;
  }

  .slider_container {
    width: 100vw;
    overflow-x: auto;
    margin-bottom: var(--xs-spacing);
  }

  .slider {
    display: flex;
    gap: var(--medium);
    margin-top: var(--small);
    padding-bottom: var(--s-spacing);
    justify-content: space-between;
  }

  .slider-item {
    flex-shrink: 0;
    width: 120px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    text-align: center;
  }

  .slider-item p {
    margin-top: var(--xxs-spacing);
  }

  #hr_landing {
    width: 85%;
    margin: auto;
  }

  @media (min-width: 690px) {
    img {
      max-width: 100%;
      height: auto;
    }

    .slider-item {
      text-align: center;
      width: 100%;
    }

    .slider {
      display: grid;
      grid-template-columns: repeat(7, 1fr);
      justify-items: center;
    }

    .slider_container {
      overflow-x: visible;
    }
  }
</style>
